<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Movie List</title>
  </head>
  <body>
    <h1>Movie List</h1>
    <div class="movies">
      <% if (movies) { for(let m in movies){ %>
      <div class="movie">
        <h2>
          <%=`${movies[m].title[0].toUpperCase()}${movies[m].title.slice(1)}`%>
        </h2>
        <p><%= movies[m].synopsis %></p>
      </div>
      <% }} %>
    </div>
  </body>
</html>
